<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Developer Exercise</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <div class="well well-sm text-center ">
        @string.Format("Data Source: {0}", Response.Headers["from-feed"])
    </div>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-home" })</li>
                <li>@Html.ActionLink(" Distance", "Index", "Distance", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-road" })</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="disabled navbar-brand"><span class="tiny"><i>Developer Exercise by <b>Touraj Farazjou</b></i></span> </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>